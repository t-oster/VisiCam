# START / RESTART / STOP VISICAM
# ##################################################################

VISICAMPATH="TEMPLATE-DUMMY"

case $1 in
    start)
        echo "Starting VisiCam..."
        "$VISICAMPATH/start.sh"
        ;;
    stop)
        echo "Stopping VisiCam..."
        "$VISICAMPATH/stop.sh"
        ;;
    restart)
        echo "Restarting VisiCam..."
        "$VISICAMPATH/stop.sh"
        "$VISICAMPATH/start.sh"
        ;;
    *)
        echo "Usage: $0 {start|restart|stop}"
        ;;
esac

# Exit correctly without errors
exit 0